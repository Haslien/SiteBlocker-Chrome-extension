{
  "manifest_version": 3,
  "name": "Site Blocker",
  "version": "1.0.0",
  "description": "Block distracting websites and show a clean focus page.",
  "permissions": ["storage", "declarativeNetRequestWithHostAccess"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },

  "options_page": "options.html",

  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png"
    },
    "default_title": "Site Blocker"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "styles.css",
        "index.js",
        "img/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
